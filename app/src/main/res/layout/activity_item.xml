<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Item">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textItem"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="Value"
        android:layout_marginTop="75dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/item_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textItem"
        android:layout_margin="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/textItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textItemType"
        android:layout_marginTop="50dp"
        android:layout_marginStart="75dp"
        android:text="date"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textItemType"
        android:layout_below="@id/textItemCategory"
        android:layout_marginStart="75dp"
        android:textSize="25sp"
        android:text="type"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textItemCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_div"
        android:layout_marginStart="75dp"
        android:text="category"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
    android:layout_width="150dp"
    android:layout_height="75dp"
    android:id="@+id/itemDelete"
    style="@style/Button.RED"
    android:text="Delete"
    android:textSize="20sp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="125dp"
    android:clickable="true"
    android:onClick="OnDelete"/>

</RelativeLayout>