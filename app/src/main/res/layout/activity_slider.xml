<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slider Class"
            android:textSize="40sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="clip_vertical"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/category_slider_btn"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                style="@style/Button.Digital"
                android:text="Choose Category"/>

            <Button
                android:id="@+id/add_category_slider_btn"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="+"
                style="@style/Button.Round"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/category_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Selected Category"
            android:paddingStart="20dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="clip_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/type_slider_btn"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Choose Type"
                style="@style/Button.Digital"/>

            <Button
                android:id="@+id/add_type_slider_btn"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="+"
                style="@style/Button.Round"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/type_text_slider_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Selected Type"
            android:paddingStart="20dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/date_slider_btn"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Date"
                style="@style/Button.Digital"
                android:layout_marginStart="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/date_text_slider_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=""/>

        </LinearLayout>







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <SeekBar
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/save_slider_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/Button.RoundYellow"
            android:text="Save"
            android:layout_marginTop="50dp"/>


    </LinearLayout>


</LinearLayout>
