<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.TrackerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_2</item>
        <item name="android:background">@color/light_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_2</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
<!--         Customize your theme here. -->
<!--        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>-->
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="background">@color/blue_2</item>
        <item name="android:height">150dp</item>
        <item name="height">50dp</item>
    </style>

    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

<!--    <style name="Theme.TrackerApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />-->

<!--    <style name="Theme.TrackerApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="Button.1" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/blue_2</item>
        <item name="android:textColor">@color/light_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.2" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/light_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.GREEN" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/light_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.RED" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/light_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Spinner.1" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:spinnerStyle">@color/light_2</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!--    red -->
