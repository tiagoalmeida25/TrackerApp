<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrackerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_4</item>
        <item name="colorPrimaryVariant">@color/light_3</item>
        <item name="colorOnPrimary">@color/light_2</item>
        <item name="android:background">@color/light_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_4</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TrackerApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TrackerApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.TrackerApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button.1" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/light_3</item>
        <item name="android:textColor">@color/light_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.2" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/light_4</item>
        <item name="android:textColor">@color/light_1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Spinner.1" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:spinnerStyle">@color/light_2</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>