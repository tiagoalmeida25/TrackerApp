<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrackerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_3</item>
        <item name="colorPrimaryVariant">@color/dark_4</item>
        <item name="colorOnPrimary">@color/dark_2</item>
        <item name="android:background">@color/dark_1</item>
        <item name="textFillColor">@color/dark_4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_3</item>
        <item name="colorSecondaryVariant">@color/dark_4</item>
        <item name="colorOnSecondary">@color/dark_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_3</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Button.1" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/dark_3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Button.2" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/dark_4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Spinner.1" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:spinnerDropDownItemStyle">@color/light_2</item>
        <item name="android:spinnerItemStyle">@color/light_2</item>
        <item name="android:dropDownSpinnerStyle">@color/dark_2</item>
    </style>
</resources>